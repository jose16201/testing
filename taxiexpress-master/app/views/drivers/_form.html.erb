<%= simple_form_for @driver, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :Nombre %>
  <%= error_span(@driver[:Nombre]) %>
  <%= f.input :Apellido %>
  <%= error_span(@driver[:Apellido]) %>
  <%= f.input :DNI %>
  <%= error_span(@driver[:DNI]) %>
  <%= f.input :Direccion %>
  <%= error_span(@driver[:Direccion]) %>
  <%= f.input :Telefono %>
  <%= error_span(@driver[:Telefono]) %>
  <%= f.association :auto %>
  <%= error_span(@driver[:auto_id]) %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                drivers_path, :class => 'btn btn-default' %>
<% end %>


